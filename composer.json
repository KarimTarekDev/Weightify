{
    "name": "karimtarekdev/weightify",
    "description": "Weightify: The Ultimate Weight Conversion Tool is a versatile and user-friendly PHP package designed for seamless conversion between various weight units. Featuring support for common units like kilograms, pounds, ounces, and grams, this package stands out with its advanced functionalities including auto-detection of input units. ",
    "keywords": [
        "KarimTarekDev",
        "weightify"
    ],
    "homepage": "https://github.com/karimtarekdev/weightify",
    "license": "MIT",
    "authors": [
        {
            "name": "Karim Tarek",
            "email": "karimtarektech@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "KarimTarekDev\\Weightify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KarimTarekDev\\Weightify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
